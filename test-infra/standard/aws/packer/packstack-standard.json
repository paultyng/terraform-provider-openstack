{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-west-1",
    "spot_price": "auto",
    "spot_price_auto_product": "Linux/UNIX",
    "instance_type": "m3.xlarge",
    "ssh_username": "centos",
    "ssh_keypair_name": "infra",
    "ssh_private_key_file": "/root/infrastructure/keys/infra",
    "ami_name": "packstack-standard-ocata {{timestamp}}",
    "tags": {"release": "ocata"},
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "*CentOS Linux 7 x86_64 HVM EBS*",
        "root-device-type": "ebs"
      },
      "owners": ["679593333241"],
      "most_recent": true
		}
  }],

  "provisioners": [
    {
      "type": "file",
      "source": "../../files",
      "destination": "/home/centos/files"
    },
    {
      "type": "shell",
      "inline": [
        "bash /home/centos/files/deploy.sh"
      ]
    }
  ]
}
